
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.DateCell?>
<DialogPane fx:controller="sample.DialogController" xmlns:fx="https://javafx.com/fxml">
    <headerText>Put Your Instructions here</headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Short Description:" GridPane.rowIndex="0" GridPane.columnIndex="0"></Label>
            <TextField fx:id="shortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>
            <Label text="Details:" GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
            <TextArea fx:id="details" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"></TextArea>
            <Label text="Deadline" GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"></DatePicker>
        </GridPane>
    </content>
</DialogPane>

